    ================================================== -->
         </div> <!-- /.modal -->
		    
		</div><!-- /.container -->
      
         <div class="text-center" style="">
                    <ul class="pagination">
                        {{ knp_pagination_render(pagination) }}
                    </ul>
                </div>
        </section>	
{% endblock %}