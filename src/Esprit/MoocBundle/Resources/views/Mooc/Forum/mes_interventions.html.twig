{% extends "EspritMoocBundle::Layout.html.twig" %}

{% block content %}
    <div class="container col-md-offset-1" style="margin-top: 35px">
        <div class="page-header page-heading">
            <h1 class="pull-left">Forums</h1>
            <ol class="breadcrumb pull-right where-am-i">
                <li><a href="{{ path('nos_forum') }}">Forums</a></li>
                <li class=""><a href="{{ path('mes_sujets') }}"  >Mes sujet</a></li>
                <li class="active"><a href="{{ path('mes_interventions') }} " style="color: #241F1F;"  >Mes interventions</a></li>
            </ol>
            <div class="clearfix"><legend> <b> Mes Interventions</b></legend>  <a href="#publier" class=" pull-right btn-primary">Publier sujet </a></div>

        </div>

        <p class="lead"></p>
        <table class="table forum table-striped">
            <thead>
                <tr>
                    <th class="cell-stat"></th>
                    <th class="cell-stat text-center hidden-xs hidden-sm">
                        Message
                    </th>
                    <th class="cell-stat text-center hidden-xs hidden-sm"></th>
                    <th class="cell-stat text-center hidden-xs hidden-sm">Date&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
                    <th class="cell-stat-2x hidden-xs hidden-sm">&nbsp&nbsp&nbsp&nbsp </th>
                </tr>
            </thead>
            <tbody>
                {% for message in messages %}
                    <tr>
                        <td class="text-center"><i class="fa fa-question fa-2x text-primary"></i></td>
                        <td>
                            <h4><a href="">{{ message.titreMessage }}</a><br>
                                <small>
                                    <a href=""><i class="fa fa-tag"></i>{{ message.idSujetMessage.titreSujet }}</a><br><br><br>
                                    {{ message.contenuMessage | raw }}<br>
                                    <a href=""><i class="fa fa-book"></i> related courses</a>
                                </small></h4>
                        </td>
                        <td class="text-center hidden-xs hidden-sm"><a href="#"></a></td>
                        <td class="hidden-xs hidden-sm"> <a href="#"></a><br><small><i class="fa fa-clock-o"></i> {{ message.datePublicationMessage|date("F jS \\a\\t g:ia") }}</small></td>
                        <td class="text-center hidden-xs hidden-sm"><a href="#"></a></td>

                    </tr>
                {% endfor  %}
            </tbody>
        </table>

    </div>
    <div class="text-center" style="">
        <ul class="pagination">
            {{ knp_pagination_render(messages) }}
        </ul>
    </div>
{% endblock %}